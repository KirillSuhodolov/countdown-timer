<%- model_class = Event -%>
<div class="page-header">
  <h1><center>Your  <%=t '.title', :default => model_class.model_name.human.pluralize %></center></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:date_end) %></th>     
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
          <td><%= event.name %></td>
          <td><%= event.datejs %></td>                    
          <td><%=l event.created_at %></td>
          <td>
            <%= link_to t('.success', :default => t("helpers.links.show")),
                        event_path(event), :class => 'btn btn-mini btn-success ' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_event_path(event), :class => 'btn btn-mini btn-warning' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        event_path(event),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @events, :renderer => BootstrapPagination::Rails %>


<%= link_to t('.new', :default => t("helpers.links.add_event")),
            new_event_path,
            :class => 'btn btn-primary' %>