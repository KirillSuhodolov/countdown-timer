<%- model_class = Event -%>
<div class="page-header">
  <h1><center><%=t '.title', :default => model_class.model_name.human %> <%= @event.name %></center></h1>
</div>

<h2><div><center> <strong>Time left:</strong> </center></div></h2>


<div id="jcountdown" data-date="<%= @event.datejs %>"></div>


  <center><div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                events_path, :class => 'btn btn-success'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_event_path(@event), :class => 'btn btn-warning' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                event_path(@event),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div></center>
