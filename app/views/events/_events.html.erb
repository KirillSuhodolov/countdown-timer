<table class="table table-striped">
  <thead>
    <tr>
     <th><center>name</center></th>
      <th><center><%=t '.actions', :default => t("helpers.actions") %></center></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
          <td><center><%= event.name %></center></td>          
          <td><center>
            <%= link_to t('.success', :default => t("helpers.links.show")),
                        event_path(event), :class => 'btn btn-mini btn-success ' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_event_path(event), :class => 'btn btn-mini btn-warning', :remote => true %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        event_path(event),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger', :remote => true %>
          </center></td>
      </tr>
    <% end %>
  </tbody>
</table>